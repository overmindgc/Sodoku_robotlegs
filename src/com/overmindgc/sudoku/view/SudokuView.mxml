<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" 
				   width="100%" height="100%"
				   backgroundImage="{ImageLib.backgroundImg}">
	<fx:Script>
		<![CDATA[
			import com.overmindgc.lib.ImageLib;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout verticalAlign="middle"
						  horizontalAlign="center"/>
	</s:layout>
	<mx:Label id="labGameName" text="数独（Sudoku）" 
			  fontSize="50"/>
	<s:Spacer height="30" />
	<mx:Label id="labGameVersion" text="v2.0 With Robotlegs" 
			  fontSize="30"/>
	<s:Spacer height="50" />
	<s:HGroup gap="20">
		<s:Button id="btnEasy" 
				  label="简单"
				  width="150"
				  height="80"
				  fontSize="30"/>
		<s:Button id="btnNormal" 
				  label="普通" 
				  width="150"
				  height="80"
				  fontSize="30"/>
		<s:Button id="btnHard" 
				  label="高级" 
				  width="150"
				  height="80"
				  fontSize="30"/>
	</s:HGroup>
</s:BorderContainer>
